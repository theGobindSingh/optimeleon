{
  "extends": ["@optimeleon/tsconfigs/base.tsconfig.json"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@common": ["src/common"],
      "@common/*": ["src/common/*"],
      "@handlers/*": ["src/handlers/*"],
      "@middlewares/*": ["src/middlewares/*"]
    }
  },
  "include": ["src/**/*"]
}
