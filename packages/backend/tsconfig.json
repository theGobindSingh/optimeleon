{
  "extends": ["@optimeleon/tsconfigs/base.tsconfig.json"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@common": ["src/common"],
      "@common/*": ["src/common/*"],
      "@handlers/*": ["src/handlers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@workers": ["src/workers/index"],
      "@workers/*": ["src/workers/*"]
    }
  },
  "include": ["src/**/*", "global.d.ts"]
}
