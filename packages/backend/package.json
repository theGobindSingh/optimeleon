{
  "name": "@optimeleon/backend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "expose-env": "echo 'DATABASE_URL=postgres://postgres:password@localhost:5432/mydb' > .env",
    "reset:db": "rimraf prisma/migrations && rimraf generated && pnpm prisma migrate reset --force",
    "migrate:db": "pnpm expose-env && prisma migrate dev",
    "studio:db": "pnpm expose-env && prisma studio",
    "generate:db": "pnpm expose-env && prisma generate",
    "predev": "pnpm generate:db",
    "dev": "pnpm studio:db & tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "setup:db": "pnpm run migrate:db --name pre-build && pnpm run generate:db"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@clerk/express": "^1.7.15",
    "@prisma/client": "^6.13.0",
    "@types/cors": "^2.8.19",
    "bullmq": "^5.56.9",
    "cors": "^2.8.5",
    "dockerode": "^4.0.7",
    "express": "^5.1.0",
    "prisma": "^6.13.0",
    "redis": "^5.7.0"
  },
  "devDependencies": {
    "@optimeleon/eslint": "workspace:*",
    "@optimeleon/tsconfigs": "workspace:*",
    "@types/dockerode": "^3.3.42",
    "@types/express": "^5.0.3",
    "eslint": "^9.22.0"
  }
}
