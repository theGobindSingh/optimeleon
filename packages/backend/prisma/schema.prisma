generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id           String    @id @default(cuid())
  name         String
  targetUrl    String
  ignoredPaths String[]  @default([])
  userId       String
  scriptPath   String?
  createdAt    DateTime  @default(now())
  
  scripts      Scripts[] // One project can have many scripts

  @@map("projects")
}

model Scripts {
  id        String   @id @default(cuid())
  projectId String
  content   Bytes
  
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("scripts")
}