{
  "name": "optimeleon",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky",
    "commit": "git-cz",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "rimraf pnpm-lock.yaml ./**/*/pnpm-lock.yaml dist ./**/*/dist node_modules ./**/*/node_modules .turbo ./**/*/.turbo .next ./**/*/.next .cache ./**/*/.cache"
  },
  "resolutions": {
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "typescript": "5.9.2",
    "glob": "11.0.3",
    "rimraf": "6.0.1"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "dependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@commitlint/prompt-cli": "^19.7.1",
    "@inquirer/prompts": "^7.6.0",
    "@kami-ui/theme-shop": "^0.0.2",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "axios": "^1.11.0",
    "chalk": "^5.4.1",
    "commitizen": "^4.3.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "node-watch": "^0.7.4",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "6.0.1",
    "rollup": "^4.34.9",
    "tsx": "^4.19.4",
    "turbo": "^2.4.4",
    "typescript": "5.9.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
