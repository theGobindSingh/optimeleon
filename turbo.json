{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "!.turbo/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@optimeleon/backend#dev": {
      "dependsOn": ["^@optimeleon/db#build"]
    },
    "@optimeleon/db#dev": {
      "dependsOn": ["^@optimeleon/backend#dev"]
    }
  }
}
